<h1><%= @post.title %></h1>

	<% @post.attachments.each do |a| %>
		<%= image_tag a.image.url %><br>
	<% end %>

<p><%= @post.body %></p>

<p>
  Tags:
  <% @post.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Really delete the post?"} %>

<br><br>

<h3>Comments (<%= @post.comments.size %>)</h3>
<%= render partial: 'posts/comment', collection: @post.comments %>
<%= render partial: 'comments/form' %>

<br><br>

<%= link_to "<< Back to Posts List", posts_path %>