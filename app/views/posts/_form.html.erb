<%= form_for(@post) do |f| %>
  <ul>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, "Post Text" %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags" %>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>