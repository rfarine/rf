<h3>Post a Comment</h3>
<p>

<%= form_for [ @post, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Name" %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

</p>